<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}M2L Formation{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    </head>
    <body>
        <header>
            <div class="top-area">
                <h1 class="logo left"><a href=""><img src="{{ asset('img/logo.png') }}" alt="M2L"></a></h1>
                <div class="clear"></div>
            </div>

            <nav class="clear">
                <ul id="menu">
                    <li><a href="{{ path('m2l_homepage') }}">Accueil</a></li>
                    <li><a href="{{ path('m2l_formation') }}">Les Formations</a></li>
                    {% if is_granted('ROLE_USER') == false %}
                    <li><a href="{{ path('m2l_inscription') }}">Inscription</a></li>
                    
                    <li><a href="{{ path('login') }}">Connexion</a></li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('m2l_formation_add') }}">Ajouter une formation</a></li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('m2l_profil_edit') }}">Modifier mon profil</a></li>
                    <li><a href="{{ path('m2l_my_formation') }}">Mes Formations</a></li>
                    <li><a href="{{ path('logout') }}">Déconnexion</a></li>
                    {% endif %}
                    
                </ul>
            </nav>
            <div class="clear"></div>
    </header>

<section id="content">
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        </section>

<footer>
<p>Copyright ©2014 M2L. Tous droits réservés.</p>
</footer>
    </body>
</html>
